@model libray_management_system.Models.Tbl_Admin

@{
    ViewBag.Title = "AdminRegistration";
}

<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Online Library Management System | Add Author</title>
    <!-- BOOTSTRAP CORE STYLE  -->
    <link href="~/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONT AWESOME STYLE  -->
    <link href="~/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLE  -->
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <!-- GOOGLE FONT -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />

</head>
<body>
    @using (Html.BeginForm("AdminRegistration", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="content-wrapper">
            <div class="content-wrapper">
                <div class="container">
                    <div class="row pad-botm">
                        <div class="col-md-12">
                            @*<img src="~/images/logo.png" height="100" width="1000" />*@

                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <div class="panel panel-info">
                                <div class="panel-heading">
                                    Admin Info
                                </div>
                                <div class="panel-body">

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <label>Admin Name</label>
                                        @*<input class="form-control" type="text" name="category" autocomplete="off" required />*@
                                        @Html.TextBoxFor(x => x.admin_name, new { @class = "form-control" })

                                    </div>
                                    @Html.ValidationMessageFor(x => x.admin_name)

                                    <div class="form-group">
                                        <label>Email ID</label>

                                        @Html.TextBoxFor(x => x.admin_email, new { @class = "form-control" })

                                    </div>
                                    @Html.ValidationMessageFor(x => x.admin_email)
                                    <div class="form-group">
                                        <label>Password</label>

                                        @Html.PasswordFor(x => x.password, new { @class = "form-control" })

                                    </div>
                                    @Html.ValidationMessageFor(x => x.password)

                                  

                                    <div class="form-group">
                                        <label>Address</label>

                                        @Html.TextBoxFor(x => x.admin_address, new { @class = "form-control" })

                                    </div>
                                    @Html.ValidationMessageFor(x => x.admin_address)

                                    <div class="form-group">
                                        <label>Contact</label>

                                        @Html.TextBoxFor(x => x.admin_contact, new { @class = "form-control" })

                                    </div>
                                    @Html.ValidationMessageFor(x => x.admin_contact)


                                  
                                   

                                    <div class="form-group">
                                       <label>Upload File</label>
                                        <div class="col-md-10">
                                            <input type="file" name="ImageFile" id="ImageFile" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.HiddenFor(model => model.roleid, new { @Value = 2 })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Create" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                                <div class="from-group">
                                    <p style="color:green">
                                        @ViewBag.success
                                    </p>

                                </div>
                                <div class="from-group">
                                    <p style="color:red">
                                        @ViewBag.error
                                    </p>

                                </div>


                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
       
    }


</body>
</html>
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

}
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


