@model IEnumerable<libray_management_system.Models.Tbl_ReturnBook>

@{
    ViewBag.Title = "ReturnHishory";
    Layout = "~/Views/_LayoutPage1.cshtml";
}




<body>
  
        <!-- Start: Page Banner -->
        <section class="page-banner services-banner">
            <div class="container">
                <div class="banner-header">
                    <h2>User Profile</h2>
                    <span class="underline center"></span>
                    <p class="lead">Proin ac eros pellentesque dolor pharetra tempo.</p>
                </div>
                <div class="breadcrumb">
                    <ul>
                        <li><a href="index">Home/</a></li>
                        <li>Profile</li>
                    </ul>
                </div>
            </div>
        </section>
        @if (Session["uemail"] != null)
        {
            <!------MENU SECTION START-->
           

                               
                                        <table class="table table-striped table-bordered table-hover" id="dataTables-example" align="center">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Book Name</th>
                                                    <th>UserName</th>

                                                    <th>IssueDate</th>


                                                    <th>ReturnDate</th>
                                                    <th>Current Date</th>

                                                </tr>
                                            </thead>
                                            <tbody>



                                                @foreach (var item in Model)
                                                {
                                                    <tr class="odd gradeX">
                                                        <td class="center">
                                                            @Html.DisplayFor(modelItem => item.returnid)
                                                        </td>
                                                        <td class="center">
                                                            @Html.DisplayFor(modelItem => item.Tbl_Book.bookname)
                                                        </td>
                                                        <td class="center">
                                                            @Html.DisplayFor(modelItem => item.Tbl_User.username)
                                                        </td>

                                                        <td class="center">
                                                            @Html.DisplayFor(modelItem => item.issuedate)
                                                        </td>
                                                        <td class="center">
                                                            @Html.DisplayFor(modelItem => item.returndate)
                                                        </td>
                                                        <td class="center">
                                                            @Html.DisplayFor(modelItem => item.currentdate)
                                                        </td>


                                                    </tr>
                                                }

                                            </tbody>
                                        </table>

