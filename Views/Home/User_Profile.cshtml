    ViewBag.Title = "User_Profile";
    Layout = "~/Views/_LayoutPage1.cshtml";
}


<head>

    <!-- Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1">

    <!-- Title -->
    <title>..:: LIBRARIA ::..</title>

    <!-- Favicon -->
    <link href="~/uassets/images/favicon.ico" rel="icon" type="image/x-icon" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i%7CLato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet" />
    <link href="~/uassets/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

    <!-- Mobile Menu -->
    <link href="~/uassets/css/mmenu.css" rel="stylesheet" type="text/css" />
    <link href="~/uassets/css/mmenu.positioning.css" rel="stylesheet" type="text/css" />

    <!-- Stylesheet -->
    <link href="~/uassets/css/style.css" rel="stylesheet" type="text/css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.min.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->

    <style>
        body {
            background: #ffffff;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #BA68C8
        }

        .profile-button {
            background: #ff944d;
            box-shadow: none;
            border: none
        }

            .profile-button:hover {
                background: #ff8533
            }

            .profile-button:focus {
                background: #ff944d;
                box-shadow: none
            }

            .profile-button:active {
                background: #ff944d;
                box-shadow: none
            }

        .back:hover {
            color: #ff944d;
            cursor: pointer
        }

        .labels {
            font-size: 11px
        }

        .add-experience:hover {
            background: #BA68C8;
            color: #fff;
            cursor: pointer;
            border: solid 1px #BA68C8
        }
    </style>


</head>
<body>
    <!-- Start: Page Banner -->
    <section class="page-banner services-banner">
        <div class="container">
            <div class="banner-header">
                <h2>User Profile</h2>
                <span class="underline center"></span>
                <p class="lead">Proin ac eros pellentesque dolor pharetra tempo.</p>
            </div>
            <div class="breadcrumb">
                <ul>
                    <li><a href="index">Home/</a></li>
                    <li>Profile</li>
                </ul>
            </div>
        </div>
    </section>
    @if (Session["uemail"] != null)
    {
        <div class="container rounded bg-white mt-5 mb-5">
            <div class="row">
                <div class="col-md-3 border-right">

                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" src='@Session["profile"]'>
                        <span class="font-weight-bold"> <h5> @Session["username"]</h5></span>
                        @*<span>/</span>*@
                        <span class="text-black-50">@Session["uemail"]</span>
                    </div>
                </div>
                <div class="col-md-5 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="text-center">User Profile </h3>
                            &nbsp;
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12"><label class="labels"><h5>Name</h5></label><input type="text" class="form-control" value="@Session["username"]" readonly></div>
                            &nbsp;
                            <div class="col-md-12"><label class="labels"><h5>Email</h5></label><input type="text" class="form-control" value="@Session["uemail"]" readonly></div>

                        </div>
                        <div class="row mt-3">
                            &nbsp;
                            <div class="col-md-12"><label class="labels"><h5>Address</h5></label><input type="text" class="form-control" value="@Session["useradd"]" readonly></div>

                            &nbsp;
                            <div class="col-md-12"><label class="labels"><h5>Contact</h5></label><input type="text" class="form-control" value="@Session["contact"]" readonly></div>
                            &nbsp;
                            <div class="col-md-12"><label class="labels"><h5>Gender</h5></label><input type="text" class="form-control" value="@Session["ugender"]" readonly></div>

                        </div>

                        &nbsp;
                        <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="button">Save Profile</button></div>
                    </div>
                </div>
                <div class="col-md-4">

                </div>
            </div>
        </div>

    }
    &nbsp;

</body>
